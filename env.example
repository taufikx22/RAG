# RAG System Environment Configuration
# Copy this file to .env and fill in your values

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEFAULT_MODEL=all-MiniLM-L6-v2

# Generation Configuration
GENERATION_DEFAULT_MODEL=gemini-pro
GENERATION_DEFAULT_TYPE=gemini
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Vector Store Configuration
VECTOR_STORE_DEFAULT=chroma

# Chroma Configuration
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=documents

# Qdrant Configuration (optional, for production)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=documents
QDRANT_VECTOR_SIZE=384

# Retrieval Configuration
RETRIEVAL_DEFAULT_STRATEGY=semantic

# Evaluation Configuration
EVALUATION_ENABLED=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
